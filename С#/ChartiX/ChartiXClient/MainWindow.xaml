<Window x:Class="ChartiXClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChartiXClient"
        mc:Ignorable="d"
        Title="ChartiX" Height="450" Width="520.466" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="90,10,0,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Width="120" IsHitTestVisible="False"/>
        <Button x:Name="btnConnection" Click="Connect_Click" Content="Войти в чат" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="283" Margin="10,38,0,0" VerticalAlignment="Top" Width="484">
            
        </ListBox>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="83" Margin="10,326,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="484" KeyDown="tbMessage_KeyDown" />

    </Grid>
</Window>
